
#!/bin/bash

# Перевірка наявності аргументу
if [ -z "$1" ]; then
    echo "Використання: $0 <шлях_до_директорії>"
    exit 
fi

# Отримання шляху до директорії
DIR="$1"

# Перевірка, чи існує директорія
if [ ! -d "$DIR" ]; then
    echo "Помилка: $DIR не є директорією або не існує."
    exit 
fi

# Підрахунок кількості файлів
FILES=$(find "$DIR" -type f | wc -l)

# Підрахунок кількості директорій
DIRECTORIES=$(find "$DIR" -type d | wc -l)

# Виведення результатів
echo "У директорії $DIR:"
echo "Файлів: $FILES"
echo "Директорій: $DIRECTORIES"
